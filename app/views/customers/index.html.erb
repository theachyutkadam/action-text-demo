<p id="notice"><%= notice %></p>
<h1>Customer Listing</h1>
<table class="table table-hover">
  <thead>
    <tr>
      <th scope="col">First name</th>
      <th scope="col">Last name</th>
      <th scope="col">Birthdate</th>
      <th scope="col">Contact</th>
      <th scope="col">Email</th>
      <th colspan="3"><%= link_to 'New', new_customer_path, class: "btn btn-primary btn-sm text-white" %></th>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.first_name %></td>
        <td><%= customer.last_name %></td>
        <td><%= customer.birthdate %></td>
        <td><%= customer.contact %></td>
        <td><%= customer.email %></td>
        <td><%= link_to 'Show', customer, class: "btn btn-info btn-sm text-white" %></td>
        <td><%= link_to 'Edit', edit_customer_path(customer), class: "btn btn-warning btn-sm text-white" %></td>
        <td colspan="2"><%= link_to 'Destroy', customer, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm text-white"%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<table class="table table-hover">
  <thead>
    <tr>
      <th>#ID</th>
      <th>First Name</th>
      <th>Middle Name</th>
      <th>Last Name</th>
      <th>Mother Name</th>
      <th>Gender</th>
      <th>Addhar Number</th>
      <th>Contact</th>
      <th>Town</th>
      <th>Is Handicap</th>
      <th>Archived</th>
    </tr>
    <tbody>
      <%#@students.each do |student|%>
        <tr>
          <%#student.each do |key, value|%>
            <td><%#=value%></td>
          <%#end%>
        <tr>
      <%#end%>
    </tbody>
  </thead>
</table>